{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "guru-new-able"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico",
        {
          "glob": "**/*", 
          "input": "../node_modules/ckeditor/", 
          "output": "assets/js/ckeditor/", 
          "allowOutsideOutDir": true
        }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "../node_modules/bootstrap/dist/css/bootstrap.min.css",
        "../node_modules/grapesjs/dist/css/grapes.min.css",
        "../node_modules/grapesjs-preset-newsletter/dist/grapesjs-preset-newsletter.css",
        "../node_modules/ti-icons/css/themify-icons.css",
        "assets/icon/icofont/css/icofont.min.css",
        "styles.css",
        "../node_modules/ng-drag-drop/style.css",
        "../node_modules/ng2-dnd/bundles/style.css",
        "../node_modules/font-awesome/css/font-awesome.css",
        "assets/sass/form-builder.scss",
        "assets/sass/form-render.scss",
        "assets/css/angular2-multiselect-dropdown.css"
       ],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/jquery-ui-sortable/jquery-ui.min.js",
        "assets/js/RecordRTC.js",
        "assets/js/DetectRTC.js",
        "assets/js/polyfill.min.js",
        "assets/js/adapter-latest.js",
        "assets/js/getHTMLMediaElement.js",
        "assets/js/EBML.js",
        "../node_modules/grapesjs/dist/grapes.js",
        "../node_modules/grapesjs-preset-newsletter/dist/grapesjs-preset-newsletter.min.js",
        "../node_modules/bootstrap/dist/js/bootstrap.bundle.min.js",
        "assets/charts/flot/jquery.flot.js",
        "assets/charts/flot/jquery.flot.categories.js",
        "assets/charts/flot/jquery.flot.pie.js",
        "assets/charts/knob/jquery.knob.js",
        "assets/charts/waterball/createWaterBall-jquery.js",
        "../node_modules/jquery-sparkline/jquery.sparkline.min.js",
        "../node_modules/jspdf/dist/jspdf.min.js",
        "../node_modules/ng-drag-drop/index.js",
        "../node_modules/ng2-dnd/bundles/index.umd.js",
        "../node_modules/mydatepicker/bundles/mydatepicker.umd.min.js"


      ],
      "environmentSource": "environments/environment.ts"
    }

  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json"
    },
    {
      "project": "src/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {},
    "serve": {
      "port": 4200
   }
  }
}
